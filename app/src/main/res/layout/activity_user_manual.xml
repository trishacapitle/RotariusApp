<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgray"
    android:orientation="vertical"
    tools:context=".usermanual.UserManual">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:layout_centerVertical="true"
                android:id="@+id/back_Button"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Manual"
                android:textColor="@color/gold"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="24dp"
                android:layout_toEndOf="@id/back_Button"
                tools:ignore="HardcodedText" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/components_CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/bl"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:clickable="true"
                android:layout_marginEnd="24dp"
                tools:ignore="KeyboardInaccessibleWidget">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="40dp"
                        android:text="Components"
                        android:textColor="@color/gold"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/setupInstruction_CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/bl"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:clickable="true"
                android:layout_marginEnd="24dp"
                tools:ignore="KeyboardInaccessibleWidget">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Setup Instructions"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/gold"
                        android:layout_margin="40dp"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/operatingInstructions_CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/bl"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:clickable="true"
                android:layout_marginEnd="24dp"
                tools:ignore="KeyboardInaccessibleWidget">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="40dp"
                        android:text="Operating Instructions"
                        android:textColor="@color/gold"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/safetyPrecautions_CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/bl"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="50dp"
                android:clickable="true"
                android:layout_marginEnd="24dp"
                tools:ignore="KeyboardInaccessibleWidget">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="40dp"
                        android:text="Safety Precautions"
                        android:textColor="@color/gold"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>

</LinearLayout>